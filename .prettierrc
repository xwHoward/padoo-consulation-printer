{
	"semi": true,
	"singleQuote": true,
	"tabWidth": 2,
	"useTabs": false,
	"trailingComma": "es5",
	"printWidth": 100,
	"bracketSpacing": true,
	"arrowParens": "always",
	"endOfLine": "lf",
	"htmlWhitespaceSensitivity": "strict",
	"plugins": [
		"prettier-plugin-wxml"
	],
	"overrides": [
		{
			"files": "*.wxml",
			"options": {
				"parser": "wxml",
				"htmlWhitespaceSensitivity": "strict"
			}
		},
		{
			"files": "*.less",
			"options": {
				"parser": "less"
			}
		}
	]
}