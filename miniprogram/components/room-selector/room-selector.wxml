<view class="room-selector">
  <label
    wx:for="{{rooms}}"
    wx:key="*this"
    class="room-option {{selectedRoom === item ? 'selected' : ''}} {{disabled ? 'disabled' : ''}}"
    bindtap="onRoomTap"
    data-room="{{item}}"
  >
    <radio
      value="{{item}}"
      checked="{{selectedRoom === item}}"
      disabled="{{disabled}}" />
    <view class="room-name">{{item}}</view>
  </label>
</view>
