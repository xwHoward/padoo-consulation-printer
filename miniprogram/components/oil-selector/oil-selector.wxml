<view class="checkbox-group">
  <label
    wx:for="{{oils}}"
    wx:key="id"
    class="checkbox-item {{selectedOil === item.id ? 'selected' : ''}}"
    bindtap="onOilTap"
    data-oil="{{item.id}}"
  >
    <checkbox value="{{item.id}}" checked="{{selectedOil === item.id}}" />
    <view class="oil-name">{{item.name}}</view>
    <view class="oil-effect">{{item.effect}}</view>
  </label>
</view>
