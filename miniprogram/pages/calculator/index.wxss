.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
  box-sizing: border-box;
}

.scroll-view {
  height: 50vh;
  margin-bottom: 20rpx;
}

.section {
  background: white;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  color: #333;
  border-left: 8rpx solid #1890ff;
  padding-left: 16rpx;
}

.input-group {
  margin-bottom: 10rpx;
}

.input-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  padding: 12rpx 0;
}

.label {
  font-size: 28rpx;
  color: #666;
  width: 45%;
  font-weight: 500;
}

.input {
  border: 2rpx solid #e8e8e8;
  border-radius: 12rpx;
  padding: 8rpx 20rpx;
  width: 70%;
  text-align: right;
  font-size: 28rpx;
  background: #fafafa;
}

.input:focus {
  border-color: #1890ff;
  background: white;
}

.result-section {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.result-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
  color: #1890ff;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.result-card {
  background: linear-gradient(135deg, #fafafa 0%, #f0f0f0 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  border: 1rpx solid #e8e8e8;
}

.result-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  /* padding: 12rpx 0; */
  line-height: 32px;
}

.result-item:last-child {
  margin-bottom: 0;
}

.result-label {
  font-size: 28rpx;
  color: #666;
  font-weight: 600;
  white-space: nowrap;
}

.result-value {
  font-size: 32rpx;
  color: #1890ff;
  flex: auto;
  text-align: right;
}
.tag {
  display: inline-block;
  color: #666;
  font-size: 12px;
  margin-left: 4rpx;
  line-height: 12px;
  margin-bottom: -2px;
}
.chart-section {
  margin-top: 40rpx;
  padding: 24rpx;
  background: #fafafa;
  border-radius: 16rpx;
  border: 1rpx solid #e8e8e8;
}

.chart-title {
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 24rpx;
  color: #333;
}

.chart-container {
  width: 100%;
  height: 520rpx;
  margin-bottom: 20rpx;
  overflow: visible;
}

.chart-scroll {
  width: 100%;
  height: 100%;
  white-space: nowrap;
}

.chart {
  width: 100%;
  height: 100%;
}

.pie-chart {
  width: 100%;
  height: 100%;
}

.chart-legend {
  display: flex;
  justify-content: center;
  gap: 40rpx;
  margin-top: 20rpx;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.legend-color {
  width: 24rpx;
  height: 24rpx;
  border-radius: 6rpx;
}

.legend-text {
  font-size: 24rpx;
  color: #666;
}

switch {
  transform: scale(0.8);
}

slider {
  width: 100%;
  margin-top: 10rpx;
}

.stepper {
  display: flex;
  align-items: center;
  gap: 12rpx;
  justify-content: flex-end;
}

.step-btn {
  text-align: center;
  padding: 0;
  border-radius: 12rpx;
  background: #f0f0f0;
  color: #333;
  border: 2rpx solid #e0e0e0;
}

.step-btn:active {
  background: #e6f4ff;
  border-color: #1890ff;
  color: #1890ff;
}
